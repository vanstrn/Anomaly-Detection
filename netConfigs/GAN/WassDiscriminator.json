{ "NetworkName" : "BasicClassifier",
  "DefaultParams":{ "Filters":128,
                    "KernalSize":3,
                    "FCUnits":256},

  "NetworkStructure":{
    "Encoder":[
      { "layerType":"Conv2D",
        "layerName":"Conv2D_1",
        "layerInput":"input.image",
        "Parameters":{"filters":"Filters//4",
                      "kernel_size":"KernalSize*2",
                      "strides":2,
                      "padding":"same",
                      "activation":"relu"}},
      { "layerType":"Conv2D",
        "layerName":"Conv2D_2",
        "layerInput":"Conv2D_1",
        "Parameters":{"filters":"Filters//2",
                      "kernel_size":"KernalSize",
                      "strides":1,
                      "activation":"relu"}},
      { "layerType":"Conv2D",
        "layerName":"Conv2D_3",
        "layerInput":"Conv2D_2",
        "Parameters":{"filters":"Filters",
                      "kernel_size":"KernalSize",
                      "strides":1,
                      "activation":"relu"}},
      { "layerType":"Flatten",
        "layerName":"Flatten",
        "layerInput":"Conv2D_3"},
      { "layerType":"Dense",
        "layerName":"Dense1",
        "layerInput":"Flatten",
        "Parameters":{"units":"FCUnits",
                      "activation":"relu"}},
      { "layerType":"Dense",
        "layerName":"Discrim",
        "layerInput":"Dense1",
        "Output":true,
        "Parameters":{"units":1,
                      "activation":null}}

    ]
  }
}
