{ "NetworkName" : "BasicClassifier",
  "DefaultParams":{ "Filters":128,
                    "KernalSize":3,
                    "FCUnits":256},

  "NetworkStructure":{
    "Encoder":[
      { "layerType":"Concatenate",
        "layerName":"ImageCombine",
        "layerInput":["input.x","input.xRec"],
        "Parameters":{"axis":-1}},
      { "layerType":"Conv2D",
        "layerName":"Conv2D_1",
        "layerInput":"ImageCombine",
        "Parameters":{"filters":64,
                      "kernel_size":5,
                      "strides":2,
                      "padding":"same",
                      "activation":"relu"}},
      { "layerType":"Dropout",
        "layerName":"Dropout1",
        "layerInput":"Conv2D_1",
        "Parameters":{"rate":0.3}},
      { "layerType":"Conv2D",
        "layerName":"Conv2D_2",
        "layerInput":"Dropout1",
        "Parameters":{"filters":128,
                      "kernel_size":5,
                      "strides":2,
                      "activation":"relu"}},
      { "layerType":"Dropout",
        "layerName":"Dropout2",
        "layerInput":"Conv2D_2",
        "Parameters":{"rate":0.3}},
      { "layerType":"Flatten",
        "layerName":"Features",
        "layerInput":"Conv2D_2"},
      { "layerType":"Dense",
        "layerName":"ImageFeatures",
        "layerInput":"Features",
        "Parameters":{"units":"FCUnits",
                      "activation":"relu"}},
      { "layerType":"Dense",
        "layerName":"Discrim",
        "layerInput":"Features",
        "Output":true,
        "Parameters":{"units":1,
                      "activation":"sigmoid"}}

    ]
  }
}
